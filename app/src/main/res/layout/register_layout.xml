<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="25dp"
    android:background="@drawable/bluebg"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.androidmysql.MainActivity">

    <TextView
        android:id="@+id/judulform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Register"
        android:textSize="40dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/putih"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="complete your data here"
        android:layout_below="@+id/judulform"
        android:layout_centerHorizontal="true"
        android:textColor="@color/putih"
        android:textSize="15dp"
        />


    <EditText
        android:hint="Insert Full Name"
        android:textColorHint="@color/putih"
        android:id="@+id/et_name"
        android:layout_marginTop="50dp"
        android:textColor="@color/putih"
        android:drawablePadding="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_full_name"
        android:layout_below="@+id/judulform"
        android:backgroundTint="@color/putih"
        android:foregroundTint="@color/putih"/>

    <EditText
        android:hint="Insert Username"
        android:textColorHint="@color/putih"
        android:drawablePadding="10dp"
        android:id="@+id/et_username_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/et_name"
        android:textColor="@color/putih"
        android:drawableLeft="@drawable/ic_user"
        android:backgroundTint="@color/putih"
        android:foregroundTint="@color/putih"/>


    <EditText
        android:hint="Insert Password"
        android:textColorHint="@color/putih"
        android:drawablePadding="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/et_password_register"
        android:layout_below="@+id/et_username_register"
        android:inputType="textPassword"
        android:textColor="@color/putih"
        android:backgroundTint="@color/putih"
        android:foregroundTint="@color/putih"
        android:drawableLeft="@drawable/ic_pass"/>

    <EditText
        android:drawablePadding="10dp"
        android:textColor="@color/putih"
        android:hint="Insert Phone Number"
        android:textColorHint="@color/putih"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/et_phone"
        android:layout_below="@+id/et_password_register"
        android:inputType="number"
        android:maxLength="12"
        android:drawableLeft="@drawable/ic_phone"
        android:backgroundTint="@color/putih"
        android:foregroundTint="@color/putih"/>

    <EditText
        android:hint="Insert Email Address"
        android:textColorHint="@color/putih"
        android:drawablePadding="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/et_email"
        android:layout_below="@+id/et_phone"
        android:inputType="textEmailAddress"
        android:textColor="@color/putih"
        android:drawableLeft="@drawable/ic_email"
        android:backgroundTint="@color/putih"
        android:foregroundTint="@color/putih"/>


    <Button
        android:id="@+id/button_register"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Create an account"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonlogin"
        android:layout_marginTop="20dp"
        android:textColor="#00b0c1"
        android:layout_below="@id/et_email"/>
    <TextView
        android:textSize="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hakcipta"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/putih"
        android:layout_marginBottom="15dp"/>
</RelativeLayout>
